#ifndef ANIMAL_H
#define ANIMAL_H


#include "animal.r"
#include "object.h"

struct ANIMAL;

struct ANIMAL_TYPE
{
  struct OBJECT_TYPE base;
  int (*makeNoise)(struct ANIMAL *);
